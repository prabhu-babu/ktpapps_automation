{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "*": ["./test/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["test", "./.eslintrc.js", "./playwright.config.ts"],
  "exclude": ["node_modules", "dist"]
}
